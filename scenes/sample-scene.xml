<rt-scene>

<camera>
	<lookat vector3="0.0 0.0 1.0" />
	<eye	vector3="0.0 0.0 0.0" />
	<up		vector3="0.0 1.0 0.0" />
	<fov	angle="60.0 deg" />
    <near	double="1e-4" />
	<far	double="1e4" />
</camera>

<image>
	<width double="1024" />
	<height double="768" />
	<bgcolor color="0.2 0.3 0.4" />	
</image>

<materials>
	<simplemat id="diffuse_red">
		<diffuse color="0.9 0.02 0" />
		<specular color="1.0 1.0 1.0" />	
		<reflect color="0.0 0.0 0.0" />
		<transmit color="0.0 0.0 0.0" />
		<eta double="0.0"/>
		<n double="100"/>
		<isreflect bool="false"/>
		<istransmit bool="false"/>
	</simplemat>
	<simplemat id="diffuse_green">
		<diffuse color="0 0.8 0.1" />
		<specular color="1.0 1.0 1.0" />	
		<reflect color="0.0 0.0 0.0" />
		<transmit color="0.0 0.0 0.0" />
		<eta double="0.0"/>
		<n double="100"/>
		<isreflect bool="false"/>
		<istransmit bool="false"/>
	</simplemat>
	<simplemat id="diffuse_blue">
		<diffuse color="0 0.05 0.9" />
		<specular color="1.0 1.0 1.0" />	
		<reflect color="0.0 0.0 0.0" />
		<transmit color="0.0 0.0 0.0" />
		<eta double="0.0"/>
		<n double="100"/>
		<isreflect bool="false"/>
		<istransmit bool="false"/>
	</simplemat>
	<simplemat id="glass">
		<diffuse color="0.0 0.0 0.0" />
		<specular color="0.0 0.0 0.0" />
		<reflect color="0.000 0.000 0.999" />
		<transmit color="0.999 0.999 0.999" />
		<eta double="1.5"/>
		<n double="100" />
		<isreflect bool="true"/>
		<istransmit bool="true"/>
	</simplemat>	
	<simplemat id="mirror">
		<diffuse color="0.0 0.0 0.0" />
		<specular color="0.0 0.0 0.0" />
		<reflect color="0.999 0.999 0.999" />
		<transmit color="0.999 0.999 0.999" />
		<eta double="1.5"/>
		<n double="100" />
		<isreflect bool="true"/>
		<istransmit bool="false"/>
	</simplemat>	
</materials>

<objects>
	<sphere material="diffuse_red">
		<center vector3="0 0 150"/>
		<radius double="25" />
	</sphere>
	<sphere material="diffuse_green">
		<center vector3="0 60 150" />
		<radius double="15" />
	</sphere>
</objects>

<lights>
	<pointlight>
		<position vector3="0 35 100" />
		<color color="2.5 2.5 2.5" />
		<ka double="0.05" />
	</pointlight>
</lights>

<integrator>
	<whitted>
		<depth-of-recursion int="1" />
	</whitted>
</integrator>


</rt-scene>
